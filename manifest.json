{
    "manifest_version": 3,
    "name": "Capookmark",
    "version": "0.5",
    "description": "Webページのキャプチャー画像でブックマーク管理します。",
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_title": "",
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    }
}